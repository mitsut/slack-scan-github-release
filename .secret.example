# Slack Bot Token (required)
export SLACK_BOT_TOKEN='xoxb-your-token-here'

# Slack Channel Name (optional, default: notification-development)
export SLACK_CHANNEL='notification-development'

# Scan Period in Days (optional, default: 7)
export SCAN_DAYS=7

# Fetch Release Notes from GitHub API (optional, default: false)
export FETCH_NOTES=true

# GitHub Personal Access Token (optional, for higher rate limits)
export GITHUB_TOKEN='ghp_your-token-here'

# CSV Output File (optional)
export OUTPUT_CSV='releases.csv'

# Markdown Output File (optional)
export OUTPUT_MD='releases.md'

# HTML Output File (optional, for Hakoniwa WG format)
export OUTPUT_HTML='hakoniwa.html'
